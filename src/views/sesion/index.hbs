{{>navUsr comites=comites nom=nom comAct=comAct rol=rol}}

<main class="form container col-sm-9 p-3 ">
   
    
    <h1>Sesiones</h1>
    {{#if rol}}
        <a href="/sesion/crear/{{comAct.idComite}}" class="btn btn-pri">Nueva sesiòn</a>
    {{/if}}
   <table class="table table-hover table-bordered">
        <tr class="dark">
            <th>Nombre del expediente</th>
            <th>Numero de sesiòn</th>
            <th>Fecha de inicio</th>
            <th>Fecha de cierre</th>
            <th>responsable</th>
            <th>Acciones</th>
        </tr>
        {{#each sesiones}}
            <tr>
                <td>{{{this.asunto}}}</td>
                <td>{{this.numSesion}}</td>
                <td>{{this.fechaInicio}}</td>
                <td>{{this.fechaCierre}}</td>
                <td>{{this.nombre}} {{this.apellidoP}} {{this.apellidoM}}</td>
                <td>
                    <a href="/sesion/ver/{{../comAct.idComite}}/{{this.idSesion}}" class="btn btn-pri">Ver</a>
                </td>
            </tr>
        {{/each}}
    </table>
</main>

