{{#if isAdmin}}
    {{>navAdm par=3 }}
{{else}}
    {{>navUsr comites=comites nom=nom comAct=comAct}}
{{/if}}

<main class="form container col-xl-10 p-3 ">

    <h3>
        {{doc.nombre }}
        de la
         sesion {{doc.numSesion}}
        del comite {{doc.idComite}}
    </h3>
        
        {{#ifeq doc.urlDocumento undefined }}
            <div class="container col-sm-6 p-3" >
                <h1>Error 404</h1>
                <h4>Documento no encontrado</h4>
            </div>

        {{else}}
            <embed src="/{{doc.urlDocumento}}" width="100%" height="900" type="application/pdf">
        {{/ifeq}}
    <div>
        <input type="hidden" id="com"  value="{{doc.idComite}}">
        <input type="hidden" id="ses"  value="{{doc.numSesion}}">
        <input type="hidden" id="tipo" value="{{doc.idTipoDoc}}">
        
        <h5 class="mt-5">Insertar observacion</h5>
        <textarea class="form-control" rows="4" maxlength="8190" id="obs_new_text"></textarea>
        <input type="button" value="Comentar" class="btn btn-pri mt-3 mb-3"  id="obs_new_post">
        <h5>Observaciones</h5>
    </div>
    <div id="obs_index" class="form-control container p-3" >

    </div>
    <a href="/sesion/ver/{{doc.idComite}}/{{doc.numSesion}}" class="btn btn-sec mt-5">Volver</a>

</main>

<script src="/js/obs.CRUD.js">
</script>